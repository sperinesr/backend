<div class="head">
    <h1>My Profile</h1>
    <p>Wellcome!, {{user.nombre}} {{user.apellido}}!</p>
    <p>Role: {{user.role}}</p>

    {{#if this.isAdmin}}
    <button><a href="/realtimeproducts"> Modificar Productos </a></button>
    {{/if}}

    {{#if this.isUser}}
    <button><a href="/products"> Store </a></button>
    <button><a href="/chat"> Live Chat</a></button>
    <button><a href="/api/users/premium/{{user.id}}">Change Role</a></button>
    {{/if}}

    {{#if this.isPremium}}
    <button><a href="/realtimeproducts"> Modificar Productos </a></button>
    <button><a href="/chat"> Live Chat</a></button>
    <button><a href="/api/users/premium/{{user.id}}">Change Role</a></button>
    {{/if}}

    <form action="/api/users/logout" method="POST" style="border: 0px;">
        <button type="submit">Logout</button>
    </form>

</div>